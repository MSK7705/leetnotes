{
  "manifest_version": 3,
  "name": "LeetCode Local Sync",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["https://leetcode.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
